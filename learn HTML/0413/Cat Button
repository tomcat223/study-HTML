<body>

  <h2>欢迎来到喵星球！😻</h2>

  <button class="cute-btn" id="meowButton">点我喵~</button>

  <div class="meow-message" id="meowMessage">喵呜~ 🐾</div>

  <audio id="meowSound" src="https://www.soundjay.com/button/beep-07.wav" preload="auto"></audio>

  <script>
    // 获取按钮和消息元素
    const meowButton = document.getElementById('meowButton');
    const meowMessage = document.getElementById('meowMessage');
    const meowSound = document.getElementById('meowSound');

    // 按钮点击事件
    meowButton.addEventListener('click', function() {
      // 播放喵叫音效
      meowSound.play();

      // 显示"喵呜~"消息并动画效果
      meowMessage.style.display = 'inline-block';

      // 2秒后隐藏消息
      setTimeout(function() {
        meowMessage.style.display = 'none';
      }, 2000);
    });
  </script>

</body>
