      box-shadow: 0 8px 16px rgba(255, 182, 193, 0.4);
      cursor: pointer;
      transition: all 0.3s ease;
      position: relative;
    }

    .cute-btn:hover {
      background-color: #ffa3b1;
      transform: translateY(-4px);
      box-shadow: 0 12px 24px rgba(255, 182, 193, 0.6);
    }

    .cute-btn:active {
      transform: scale(0.97);
    }

    .cute-btn::before {
      content: '🐾';
      position: absolute;
      left: -24px;
      top: 50%;
      transform: translateY(-50%);
      font-size: 22px;
